<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true">
    <include
        layout="@layout/activity_main_content"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:paddingTop="65dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Title"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:backgroundTint="#FFA800"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:text="Date"
                android:textColor="@color/black"
                android:backgroundTint="#D9D9D9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#FFEC85"
            android:background="@drawable/edit_text_shadow_border_radius">

            <EditText
                style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your first note's title"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:padding="0dp"/>

            <EditText
                android:id="@+id/editText"
                style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="Some sentence about your note..."
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="#FFEC85"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_shadow_border_radius"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your second noteâ€™s title with images/videos"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some sentence about your note..."
                android:textSize="12dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="#93C1D0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="#93C1D0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="#93C1D0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="#93C1D0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="#93C1D0"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>